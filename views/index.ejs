        <svg class="blob blob2" viewBox="0 0 200 200">
            <path fill="#c7d2fe" d="M43.4,-70.4C54.2,-63.1,59.5,-46.6,65.9,-31.2C72.3,-15.8,79.8,-1.6,77.1,11.6C74.4,24.7,61.4,36.8,48.1,44.8C34.8,52.7,21.2,56.6,7.1,60.1C-7,63.5,-21.7,66.6,-32.3,60.6C-42.9,54.6,-49.4,39.5,-58.2,25.7C-67,11.9,-77.9,-0.7,-76.2,-12.1C-74.5,-23.5,-60.2,-33.8,-46.9,-41.7C-33.6,-49.7,-21.3,-55.3,-7.2,-59.2C6.9,-63.2,13.7,-65.7,43.4,-70.4Z" transform="translate(100 100)" />
        </svg>
    </div>
    <header>
        <h1>MESSENGER</h1>
    </header>
    <main>
        <h2>All Chats</h2>
        <% if (chats && chats.length > 0) { %>
            <section class="chat-list">
                <% chats.forEach(chat => { %>
                    <article class="chat-card">
                        <div class="chat-header">
                            <span class="label">From:</span>
                            <span class="from-name"><%= chat.from %></span>
                        </div>
                        <div class="msg">
                            <p><%= chat.msg %></p>
                        </div>
                        <div class="chat-footer">
                            <span class="label">To:</span>
                            <span class="to-name"><%= chat.to %></span>
                        </div>
                    </article>
                <% }); %>
            </section>
        <% } else { %>
            <p class="no-chats">No chats available.</p>
        <% } %>
    </main>
</body>
</html>
